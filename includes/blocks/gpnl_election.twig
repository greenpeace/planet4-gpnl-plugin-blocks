{% block gpnl_election %}
  {% if ( fields ) %}
	  <div style="background-image: url({{ fields.backgroundimage.src }});margin: 54px calc(50% - 50vw) 32px;">
		  <div class="page-template">
			  <h1>{{ fields.title }}</h1>

			  <div class="row limit-visibility election-options" style="margin: 54px calc(50% - 50vw) 32px;">
				  {% set i = 1 %}
				  {% for option in options %}
					  <div class="col-xl cover-card-column">
						  <div class="cover-card card-one" style="background-image: url({{ option.attachment.src }});">
							  <div class="cover-card-content">
								  <a data-toggle="modal" data-target="#electionModal" data-id="{{ i }}">
									  <h2 class="cover-card-heading">{{ option.title|e('wp_kses_post')|raw }}</h2>
								  </a>
							  </div>
							  {% if option.subtitle %}
								  <p class="educationcovers__card__p">{{ option.subtitle|e('wp_kses_post')|raw }}</p>
							  {% endif %}
							  <a class="btn btn-action btn-block cover-card-btn"
								 data-toggle="modal" data-target="#electionModal" data-id="{{ i }}">Meer info</a>
						  </div>

					  </div>
					  {% set i = i + 1 %}
				  {% endfor %}
			  </div>
		  </div>
	  </div>
	  <div>
		  <div class="modal fade" id="electionModal" tabindex="-1" role="dialog" aria-labelledby="electionModalLabel" aria-hidden="true">
			  <div class="modal-dialog modal-dialog-centered" role="document">
				  <div class="modal-content">
					  <div class="modal-header">
						  <h2 class="modal-title" id="electionModalLabel"></h2>
						  <i><h2 class="modal-subtitle" id="electionModalLabel"></h2></i>
						  <button type="button" class="close" data-dismiss="modal" aria-label="Sluit">
							  <span aria-hidden="true">&times;</span>
						  </button>
					  </div>
					  <div class="modal-body">
					  </div>
					  <div class="modal-form">
						  <form class="gpnl-petitionform" style="display: none" onsubmit="return false;">
							  <div class="form-group">
								  <label hidden for="name">Naam</label>
								  <input name="name" required type="text" class="form-control" placeholder="Voornaam">
							  </div>
							  <div class="form-group">
								  <label hidden for="mail">Email</label>
								  <input name="mail"  required type="email" class="form-control" placeholder="E-mail">
							  </div>

							  <div class="form-group">
								  <label hidden for="phone">Telefoonnummer</label>
								  <input name="phone" type="text" class="form-control" placeholder="Telefoonnummer">
							  </div>
							  <div class="form-group optin">
								  <input class="form-check-input gpnl-petition-checkbox" name="consent" type="checkbox" />
								  <label class="gpnl-petition-checkbox-label" for="consent"><small class="form-check-label">{{ fields.consent }}</small></label>
							  </div>
							  <label for="phone"><small >Vul je je telefoonnummer in? Dan kan Greenpeace jou telefonisch benaderen voor giftverzoeken of updates rondom lopende campagnes.</small></label>
						  </form>
					  </div>
					  <div class="modal-footer">
						  <button type="button" class="btn btn-cancel" data-dismiss="modal">Sluit</button>
						  <button type="button" class="btn btn-primary btn-submit">Stem</button>
					  </div>
				  </div>
			  </div>
		  </div>
	  </div>


